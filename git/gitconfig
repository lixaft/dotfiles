# Configuration file for git.
#
# Description:
#
#   Git is a free and open source distributed version control system designed
#   to handle everything from small to very large projects with speed and
#   efficiency.
#
# Location:
#
#   ~/.gitconfig
#

[advice]
statusHints = false

[alias]
git = !git
plog = log --graph --abbrev-commit --decorate --format=format:'%C(bold yellow)%h%C(reset) - %C(bold blue)(%ar)%C(reset) %s %C(bold black)%an%C(reset)%C(bold green)%d%C(reset)'

[core]
symlinks = true
editor = vim

[completion]
commands = -gitk

[fetch]
prune = true

[user]
name = Fabien Taxil
email = fabien.taxil@gmail.com
