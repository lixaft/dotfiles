import readline
import rlcompleter

# Enable the completion.
readline.parse_and_bind("tab: complete")
del readline, rlcompleter


# Allow to exit python using `exit` instead of `exit()`.
try:
    type(exit).__repr__ = type(exit).__call__  # type: ignore[method-assign]
except NameError:
    pass


def jp(*args, **kwargs):  # type: ignore[no-untyped-def]
    """JSON style print function."""
    kwargs.setdefault("indent", 2)
    __import__("json").dumps(*args, **kwargs)


def pp(*args, **kwargs):  # type: ignore[no-untyped-def]
    """Use PrettyPrint to print the given object."""
    __import__("pprint").pprint(*args, **kwargs)
