"""Configurate file for interactive python.

Description:

    File sourced when python in executed in an interactive mode.

Location:

    ~/.pythonrc

"""
import readline
import rlcompleter

readline.parse_and_bind("tab: complete")
del readline, rlcompleter


def jp(*args, **kwargs):
    """JSON style print function."""
    import json

    kwargs.setdefault("indent", 2)
    print(json.dumps(*args, **kwargs))


def pp(*args, **kwargs):
    """Use PrettyPrint to print the given object."""
    import pprint

    pprint.pprint(*args, **kwargs)
