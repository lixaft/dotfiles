#!/usr/bin/env bash
logout=''
reboot='累'
shutdown='⏻'

all=(
	"$logout"
	"$reboot"
	"$shutdown"
)

show() {
	rofi \
		-dmenu \
		-p "$USER" \
		-mesg "Uptime: $(uptime -p | sed -e 's/up //g')" \
		-theme "$HOME/.config/rofi/powermenu.rasi"
}
action="$(printf "%s\n" "${all[@]}" | show)"

case "$action" in
$logout)
	qtile cmd-obj -o cmd -f shutdown
	;;
$reboot)
	systemctl reboot
	;;
$shutdown)
	systemctl poweroff
	;;
esac
